# Production Deployment Configuration for David's 30th Birthday Party

# Core Flask Settings
FLASK_ENV=production
FLASK_DEBUG=False

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security - Change to a strong random key in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=david_wird_30_secret_key_2025

# Session Security (enable SECURE=True if using HTTPS)
